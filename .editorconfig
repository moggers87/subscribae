# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python and Markdown
[*.py, *.md]

# reStructuredText
[*.rst]

# Javascript
[*.{js,json}]

# HTML
[*.html]

# CSS, SCSS
[*.{css,scss}]
